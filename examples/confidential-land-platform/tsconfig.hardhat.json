{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "mocha", "chai"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./test/**/*.ts",
    "./scripts/**/*.ts",
    "./typechain-types/**/*.ts"
  ],
  "files": [
    "./hardhat.config.cjs"
  ]
}
